<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	
	<appender name="bulk" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="C:/Newsportal/logs/bulk.log"/>
        <param name="Threshold" value="WARN" />
        <param name="Append" value="true"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd'.log'"/>
        <param name="Encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} [%-5p][%-16.20t][%30c] - %m%n"/>
        </layout>
    </appender>

	<appender name="application" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="C:/Newsportal/logs/application.log" />
		<param name="MaxFileSize" value="10MB" />
		<param name="MaxBackupIndex" value="10" />
		<param name="Encoding" value="UTF-8" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} [%-5p][%-16.20t][%30.30c{-3}] - %m%n" />
		</layout>
	</appender>

	<appender name="orm" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="C:/Newsportal/logs/orm.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<param name="Encoding" value="UTF-8" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} [%-5p][%-16.20t][%30c] - %m%n" />
		</layout>
	</appender>

	<!-- Application Loggers -->
	<logger name="net.filippov.newsportal">
		<level value="info" />
		<appender-ref ref="application" />
	</logger>

	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>

	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>

	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>

	<logger name="org.hibernate" additivity="false">
		<level value="WARN" />
		<appender-ref ref="orm" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="info" />
		<appender-ref ref="console" />
		<appender-ref ref="bulk" />
	</root>

</log4j:configuration>
